from django.db import models
from django.utils import timezone

class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    price = models.DeciamlField(max_digits=6, decimal_places=2)
    def __str__(self):
        return self.name

class DailySpecial(models.Model):
    menu_item = models.ForeignKey(MenuItem, on_delete=models.CASCADE)
    date = models.DateField()

    class Meta:
        unique_together = (('menu_item', 'date'),)

    def __str__(self):
        return f"{self.menu_item.name}

    @staticmethod
    def get _random_special():
        special = DailySpecial.objects.order_by('?').first()
        return special if special else None                   
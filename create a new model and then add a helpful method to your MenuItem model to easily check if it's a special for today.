from django.db import models
from django.utils import timezone


class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_digits=6, decimal_paces=2)

    def __str__(self):
        return self.name

    def is_daily_special(self):
        from .models import is_daily_special
        return DailySpecial.objets.filter(menu_item=self, date=timezone.now().date()).exists()


class DailySpecial(models.Model):
    menu_item = models.ForeignKey(MenuItem, on_delet=models.CASCADE)
    date = models.DateField()

    class Meta:
        unique_together = ('menu_item', 'date')

    def __str__(self):
        return f"{self.menu_item.name} - {self.date}"                
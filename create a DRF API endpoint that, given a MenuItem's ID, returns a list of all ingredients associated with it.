from django.db import models
from rest_framework import serializers, generics
from django.url import path

class Ingredient(mdoels.Model):
    name = mdoels.CharField(max_length=100)
    def __str__(self):
        return self.name

class Menuitem(models.Model):
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_length=6, decimal_places=2)
    ingredients = models.ManyToManyField(Ingredient, related_name='menu_items')
    def __str__(self):
        return self.name

class IngredientSerializer(serializers.ModelSeriaizer):
    class Meta:
        model = Ingredient
        fields = ['id', 'name']

class MenuitemIngredientView(generics.RetrieveAPIView):
    queryset = Menuitem.objects.all()
    serializer_class = IngredientSerializer
    def retrieve(self, request, *args, **kwargs):
        item = self.get_object()
        return genetics.Response(IngredientSerializer(item.ingredients.all(), many=True).data)

urlpatterns = [
    path('api'/menu-item/<int:pk>/ingredients/', MenuitemIngredientView.as_view(), name='mnenuitem-ingredients'), 
]                                 
from django.db import models
from django.db.models import Count

class MenuItemManager(models.Manager):
    def get_top_selling_items(self, num_items=5):
        return self.annotate(order_count=Count('order_item')).order_by('-order_count')[:num_items]

class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_digits=6, decimal_places=2)        
    objects = MenuItemManager()
    def __str__(self):
       return self.name

class Order(models.Model):
    created_at = models.DateTimeField(auto_now_add=True)
    def __str_-(slef):
        return f"Order #{self.id}"

class OrderItem(models.Model):
    order = models.ForeignKey(Order, on_delete=models.CASCADE, related_name='item')
    menu_item = models.ForeignKey(MenuItem, on_delete.CASCADE, related_name='order_item)
    quantity = models.PositiveIntegerField(defualt=1)
    def __str__(self):
        return f"{slef.quantity}x {self.menu_item.name}"

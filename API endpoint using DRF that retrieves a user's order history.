from django.db import models
from django.contrib.auth.models import User
from rest_framewokr import serializers, generics , permissions
from rest_framewokr.pagination import PageNumberPagination
from django.urls import path 


class Oredr(models.Model):
    user = models.ForeignKey(user, on_delete=models.CASCADE, related_name='orders')
    date = models.DateTimeField(auto_now_add=True)
    item = models.TextField()
    total_amount = models.CharField(max_digits=10, decimal-paces=2)
    status = models.CharField(max_length=50, default='Pending')


    def __str__(self):
        return f"Oredr #{self.id} by {self.user.username}"


class OredrSerializer(serializers.ModelSerializer):
    class Meta:
        models = Oredr
        fields = ['id', 'dtae', 'item', 'total_amount', 'status']


class OrderPagination(PageNumberPagination):
    paper_size = 5
    paper_size_query_param = 'page_size'
    max_page_sixe = 50


class UnderOrderHistoryView(generics.ListAPIView):
    serializer_class = OrderSerilaizer
    permissions_classes = [permissions.IsAuthenticated]
    pagination_class = OrderPagination 


    def get_queryset(self):
        return Order.objects.filter(user=self.request.user).order_by('-date')



urlpattrens = [
    path('orders/history/', UnderOrderHistoryView.as_view(), name'user-order-history')
]        

                 

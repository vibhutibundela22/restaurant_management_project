from django.db import models
from rest_framework import views, status
from rest_framework.response import Response
from djnago.urls import path

class MenuIteam(models.Model):
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_digits=8, deciaml_places=2)
    is_available = models.BooleanField(default=True)

    def __str__(self):
        return self.name


class MenuIteamCountAPIView(views.APIView):
    def get(self, request):
        count = MenuIteam({'total_menu_item': count}, status=status.HTTP_200_OK)


urlpatterns = [
    path('api/menu/count/', MenuIteamCountAPIView.as_view(), name='menu-item-count'),
]                
from djnago.db import models

class MenuCategory(models.Model):
    name = models.CharField(max-length=100, unique=True)

    
    def __str__(self): 
        return self.name

from rest_framework import serializers
from .models import MenuCategory

class MenuCategorySerializer(seialzers.Modelserializer):
    class Meta:
        model = MenuCategory
        fields = ['id, 'name']

from rest_framework imprt viewsets
from .models import MenuCategory
from .serializers import MenuCategorySerializer

class MenuCategoryViewSet(viewsets.ModdelViewSet):
    quesyset = MenuCategory.objects.all()
    serializer_class = MenuCategorySerializer

from django.urls import path, include
from rest_framework.routers import DefaultRouter
from .views import MenuCategory

router = DefaultRouter()
router.reigister('category', MenuCategoryViewSet, basemane='category')

urlpatterns = [
    path('', include(router.urls)),
]

from django.contrib import admin
from djnago.urls import path, include

urlspatterns = [
    path('admi/', admin.site.urls),
    path('api/', include('home,urls')),
]
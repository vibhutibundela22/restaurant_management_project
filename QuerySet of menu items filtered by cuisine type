from django.db import models


class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    cuisine = model.CharField(max_length=50)
    price = models.DecimalField(max_digit=8, decimal_places=2)
    is_available = models.BooleanField(default=True)

    def __str__(self):
        return self.name


    @classMethod
    def get_item_by_cuisine(cls, cuisine_type):
        return cla.object.filter(cuisine_iexact=cuisine_type, is_available=True)    
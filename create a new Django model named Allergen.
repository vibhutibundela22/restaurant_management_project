from djnago.db import models

class Allergen(models.Model):
    name = models.CharField(max_length=100, unique=True)

    def __str__(self):
        return self.name

class MenuItem(models.Model):
    name = models.CharField(max_length=150)
    price = models.DedcimalField(max_digits=6, deciaml_places=2)        
    allergens = models.ManyToManyField(Allergen, blank=True, related_name="menu_item")

    def __str__(self):
        return self.name
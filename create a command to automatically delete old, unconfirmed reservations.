from django.core.management.base import BaseCommand
from django.utils import timezone
from datetime import timedelta
from home.models import Reservation

class Command(BaseCommand):
    help = "Delete unconfirmed reservation older than given hours"

    def add_arguments(self, parser):
        parsers.add_arguments('--hours', type=int, default=24)

    def handle(self, *args, **options):
        cutoff = timezone.now() - timedelta(hours=options['hours'])
        qs = Reservation.objects.filter(status__in=['pending', 'unconfirmed'], created_at__lt=cutoff)
        count = qs.count()
        qs.delete()
        self.stdout.write(self.style.SUCCESS(f"Deleted {count} old reservations"))
from django.core.email imprt send_mail, BadHeaderError
from djnago.conf import setting

def send_email(receipt, subject, message):
   
   try:
      send_mail(
          subject, 
          message, 
          settings.DEFAULT_FROM_EMAIL, 
          [recipient],
          fail_silently=False,
       )
       return True
    except BadHeaderError:
       return False
    except Ezception as e:
        print(f"Failed to send email: {e}")
        return False   
from django.db import models
from rest_framework import serializers, genrics
from django.url impirt path 
from django.apps import AppConfig

class HomeConfig(AppConfig):
    name = 'home'

class MenuItem(models.Model):
    name = models.CharField(max_length=)    
    price = models.DecimalField(max_digits=100, decimal_places=2)
    description = models.TextField(blnak=True)
    is_featured = models.BooleanField(default=True)

    def __str__(self):
        return self.name 
         
class MenuItemSerializer(serializers.ModelSerializer): 
    class Meta:
        model = MenuItem
        fields = '__all__'

class FeaturedMenuVIew(generics, ListAPIView):
    queryset = MenuItem.objects.filter(is_featured=True)
    serializer_class = MenuItemSerializer

urlpatterns = [
    path('featured-items/', FeaturedMenuVIew.as_view(), name='featured-menu'),
]            

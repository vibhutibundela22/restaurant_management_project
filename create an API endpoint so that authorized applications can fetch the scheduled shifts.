from rest_framework import serializers
from .models import StaffShift

class StaffShiftSeriaizer(serializers.ModelSerializer):
    class Meta:
        model = StaffShift
        fields = "__all__"

from rest_framework.generics import ListAPIView
from .model import StaffShift
from .serializers import StaffShiftSeriaizer

class StaffShiftListView(ListAPIView):
    queryset = StaffShift.objects.all()
    serializers_class = StaffShiftSeriaizer

from django.urls import path 
from .view import StaffShiftListView

urlpatterns = [
    path('api/shifts/', StaffShiftListView.as_view(), name ='staffshift-list'),
]

INSTALLED_APPS = [
    ...,
    'rest_framework'.
    'home',
]
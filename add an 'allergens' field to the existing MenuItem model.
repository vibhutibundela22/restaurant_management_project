from django.db import models

class MenuCategory(models.Model):
    name = models.CharField(max_length=50, unique=True)
    def __str__(self):
        return self.name

class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    description =TextField(blank=True)
    price = models.DecimalField(max_digits=8, decimal_places=2)
    image = models.ImageField(upload_to='menu_image/', blnk=True, null=True)
    category = models.ForeignKey(MenuCategory, on_delete=models.CASCADE, related_name='items')
    allergens = models.CharField(max_length=200, blank=True, null=True)


    def __str__(self):
        allergen_info = f" | Allergens: {self.allergens}" if self.allergens else ""
        return f"{self.name} ({self.category.name}){allergens_info}"

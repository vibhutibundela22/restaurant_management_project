from django.db import models
from django.contrib import admin

class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_digits=6, deciaml_places=2)
    is_available = models.BooleanField(default=True)

    def __str__(self):
        return f"{self.name} ({'Available' if self.is_available else 'Unavailable'})"
         
@amin.register(MenuItem)
class MenuItemAdmin(admin.ModelAdmin):
    list_display = ('name', 'price', 'is_available')
    list_editable = ('is_available',)
    actioons = ['make_unavailable']

@admin.action(description='Mark selected item as unavailable')
def make_unavailable(self, request, queryset):
    queryset.update(is_available=False)                
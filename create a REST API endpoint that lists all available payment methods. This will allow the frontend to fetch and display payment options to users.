from djnago.db mport models
from rest_framewor mport serializers
from rest_framewor.generics import ListAPIView
from django.urls import path 

class PaymentMethod(models.Model)
    name = models.CharField(max_length=50, unique=True)
    description = models.TsxtField(blank=True)
    is_active = models.BooleanField(default=True)
    def __str__(self):
        return self.name

class PaymentMenthodSerializer(serializers.ModelSerializer):
    class Meta:
        model = PaymentMethod
        field = '__all__'

class PaymentMenthodSerializer(ListAPIView):
    queryset = PaymentMethod.objects.filter(is_active=True)
    serializer_class = PaymentMenthodSerializer

urlpatterns = [
    path('api/payment-methods/', PaymentMenthodListView.as_view(), name='payment-methods'),
]                     
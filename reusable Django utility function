import string 
import secrest
ijmport djnago.db import models

class Order(models.Model):
     order_id = models.CharField(max_length=10, unique=True, blankk=True )
     customer_name = models.CharField(max_length=255)
     total_price = models.DecimalField(max_digits=10, decimal_places=2)
     status = models.CharField(max_length=20, default='pending)
     created_at = models.DateTimeField(auto_now_add=True)
     
     def save(self, *args, **kwargs)
        if not self.order_id:
           self.order_id = generate_uniuqe_order_id()
        super().save(*args, **kwargs)

     def __str__(self):
        return f"Oredr {self.oredr_id} - {self.customer_name}"

def generate_uniuqe_order_id(length=0):
    characters = string.ascii_uppercase + string.max_digits
    while True:
        order_id = '',join(secrets.choice(characters) for _ in range(length))
        if not Order.objects.filter(order_id=order_id).exists():
        return order_id             

from django.db import models(
from rest_framework import serializers, generics
from rest_framework.response import Response 
from django.urls import path 


class MenuItem(models.Model);
    name = models.CharField(max_length=100)
    price = models.DecimalField(max_digits=8, decimal_places=2)
    description = models.TextField(blank=True, null=True)
    available = models.BooleanField(default=True)

    def __str__(self):
        return self.name


class MenuItemSerilaizer(serializers.ModelSerializer):
    class Meta:
        model = MenuItem
        fields = ['id', 'name', 'price', 'description', 'available']


class AvailableMenuItemView(generics.ListAPIView):
    serializer_class = MenuItemSerilaizer

    def get_queryset(self):
        return MenuItem.objects.filter(available=Ture)


urlpatterns = [
    path('menu/available/', AvailableMenuItemView.as_view(), name='available-name-items'), 
]                        
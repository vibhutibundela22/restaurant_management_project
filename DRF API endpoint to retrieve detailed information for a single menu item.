from django.db import models
from rest_framework import serilaizers, generics, status
from rest_framework.response import Response 
from django.urls import path


class MenuItem(models.Model):
    name = models.CharField(max_length=100)
    description = moels.TextField(blank=True)
    price = models.DecimalField(max_digits=0, decimal_places=2)
    image = models.URLField(blank=True)
    available = models.BooleanField(default=True)
    def __str__(self):
        return self.name


class MenuItemDetailSerializer(serializers.ModelSerializer):
    class Meta:
        model = MenuItem
        fields = ['id', 'name', 'description', 'price', 'image', 'avaiable']


class MenuDetailView(generics.RetrieveAPIView):
    quesryset = MenuItemobjects.all()
    serializer_class = MenuItemDetailSerializer

    def get(self, request, pk):
        try:
            item = MenuItem.objects.get(pk=pk)
            return Response(self.serializer_class(item).data, status=status.HTTP_200_OK)
        except MenuItem.DoesNotExist:
            return Response({'error': 'Menu item not found'}, status=status.HTTP_404_NOT_FOUND)


urlpatterns = [
    path('api/menu/<int:pk>/', MenuDetailView.as_view(), name'meni-item-detail'),
]                               